generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/admin.db"
}

model basic {
  id                           Int                            @id @default(autoincrement())
  nickname                     String
  birthday                     String
  job                          String
  belongTo                     String
  basic_like_relation          basic_like_relation[]
  basic_output_relation        basic_output_relation[]
  basic_qualification_relation basic_qualification_relation[]
}

model basic_like_relation {
  basic_id Int
  like_id  Int
  basic    basic @relation(fields: [basic_id], references: [id])
  like     like  @relation(fields: [like_id], references: [id])

  @@id([basic_id, like_id])
}

model basic_output_relation {
  basic_id  Int
  output_id Int
  basic     basic  @relation(fields: [basic_id], references: [id])
  output    output @relation(fields: [output_id], references: [id])

  @@id([basic_id, output_id])
}

model basic_qualification_relation {
  basic_id         Int
  qualification_id Int
  basic            basic         @relation(fields: [basic_id], references: [id])
  qualification    qualification @relation(fields: [qualification_id], references: [id])

  @@id([basic_id, qualification_id])
}

model like {
  id                  Int                   @id @default(autoincrement())
  name                String
  basic_like_relation basic_like_relation[]
}

model output {
  id                    Int                     @id @default(autoincrement())
  name                  String
  url                   String?
  icon                  String?
  basic_output_relation basic_output_relation[]
}

model qualification {
  id                           Int                            @id @default(autoincrement())
  name                         Int
  org                          Int?
  url                          Int?
  date                         Int?
  note                         Int?
  basic_qualification_relation basic_qualification_relation[]
}
